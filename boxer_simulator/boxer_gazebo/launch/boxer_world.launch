<?xml version="1.0"?>
<launch>
  <!-- Configurable launch args -->
  <arg name="use_sim_time" default="true" />
  <arg name="gui" default="true"/>
  <arg name="headless" default="false" />
  <arg name="real_time_update_rate" default="100.0" doc="Specify simulation frequency (Hz)"/>
  <arg name="robot_namespace" default="/"/>

  <!-- Launch Gazebo with the specified world -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="debug" value="0" />
    <arg name="gui" value="$(arg gui)" />
    <arg name="use_sim_time" value="$(arg use_sim_time)" />
    <arg name="headless" value="$(arg headless)" />
    <arg name="paused" value="false"/>
    <arg name="world_name" value="$(find boxer_gazebo)/worlds/floor4plan.world"/>
  </include>

<!--   <param name="walls_description" command="$(find xacro)/xacro '$(find boxer_gazebo)/worlds/boxer_world/walls.urdf.xacro'" />
  <param name="rooms_description" command="$(find xacro)/xacro '$(find boxer_gazebo)/worlds/boxer_world/rooms.urdf.xacro'" />

  <node name="spawn_walls" pkg="gazebo_ros" type="spawn_model"
        args="-param walls_description
              -urdf
              -x 0 -y 0 -z 0
              -model walls"
        respawn="false" output="screen" />
  <node name="spawn_rooms" pkg="gazebo_ros" type="spawn_model"
        args="-param rooms_description
              -urdf
              -x 0 -y 0 -z 0
              -model rooms"
        respawn="false" output="screen" /> -->

  <!-- Spawn a single BOXER robot -->
  <include file="$(find boxer_gazebo)/launch/spawn_boxer.launch" >
    <arg name="robot_namespace" value="$(arg robot_namespace)"/>
  </include>
</launch>
